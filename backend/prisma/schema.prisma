generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User{
  id Int @id  @unique @default(autoincrement())
  createdAt  DateTime @default(now())
  email String @unique @default("email_def")
  password String @default("pass_def") 
  todos Todo[]
}

model Todo{
  id Int @id @unique @default(autoincrement())
  createdAt  DateTime @default(now())
  task String
  done Boolean
  pvt Boolean @default(false)
  byId Int
  user User @relation(fields: [byId], references: [id])
}
